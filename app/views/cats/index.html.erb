<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Our Cats</h3>
    <%= link_to "Add a new cat", new_cat_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <% @cats.each do |cat| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to cat_path(cat), class:"text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in">
            <%= cl_image_tag cat.photo.key, height: 300, width: 400, crop: :fill %>
            <p class="text-center" ><%= cat.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>