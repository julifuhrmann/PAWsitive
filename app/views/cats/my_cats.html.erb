<div class="container p-5">
  <h2>My Cats</h2>
    <div class="cards_bookings">
      <% @cats.each do |cat| %>
        <div class="card-booking">
          <% if cat.photo.attached? %>
              <%= cl_image_tag cat.photo.key, height: 150, width: 150, crop: :fill %>
            <% end %>
          <br>
          <div>
            <div class="container-booking">
            <h2 class="text-center" ><%= cat.name %></h2>
              <%= link_to "Delete cat",
                my_cats_path(cat),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "button-cancel"
              %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
