<div class="container">
  <div class="row">
    <% if current_user.bookings.where(:cat == @cat).exists? %>
      <%= link_to "Delete Booking", cat_path(@cat), class: "btn btn-danger" %>
    <% else %>
      <%= simple_form_for [@cat, @booking] do |f| %>
        <div class="form-control">
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.submit class: "btn btn-succes" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
